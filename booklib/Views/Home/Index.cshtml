@model List<BookSearchModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Hoşgeldiniz...</h1>
</div>

<div class="text-center">
    <p>Çevrimiçi Kütüphanemizi Kullanarak Aradığınız Kitaplara Kolayca Ulaşabilirsiniz.</p>
</div>



<div class="row">
    <div class="col">
        <p>İstediğiniz kitapları aratabilir ve müsaitlik durumuna göre kitaba sahip olabilirsiniz</p>
    </div>
</div>



<div class="row">
    <form asp-action="Index" method="get">
    <div class="col">
        <input class="form-control me-2" type="text" name="SearchString" value="" /> 
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
    </form>
    <div class="col">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Kitap Kapağı</th>
                        <th>Kitap Adı</th>
                        <th>Yazar</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img width="128px" src=~/uploads/@item.BookImageFileName /></td>
                        <td>@item.BookName</td>
                        <td>@item.Author</td>
                        <td>
                            <a asp-action="BookDetails" asp-route-id="@item.BookId" class="btn btn-info btn-sm text-white"><i class="fa fa-edit me-2"></i>Detay</a>
                            <a asp-action="BorrowBook" asp-route-id="@item.BookId" class="btn btn-success btn-sm text-white"><i class="fa fa-edit me-2"></i>Ödünç Al</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>   
</div>
